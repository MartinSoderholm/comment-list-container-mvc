{
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "extends": "standard",
  "rules": {
    "indent": ["error", 2, {"SwitchCase": 1}],
    "semi": ["error", "always"],
    "space-before-function-paren": "off",
    "padded-blocks": "off",
    "import/no-webpack-loader-syntax": "off",
    "react/jsx-uses-vars": "error",
    "react/jsx-no-undef": 1,
    "react/jsx-uses-react": 1
  }
}
